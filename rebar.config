{deps, [
  {getopt, "1.0.2"}
]}.

{project_plugins, [rebar3_proper]}.


{xref, [
  {ignore, [
      {ety_main, exports_not_used}
  ]}
]}.

{xref_checks, 
  [unused_functions, exports_not_used, undefined_function_calls, deprecated_function_calls]}.

{dialyzer, [
    {warnings, []},
    {plt_extra_apps, [eunit, syntax_tools, compiler]}
]}.

{escript_name, ety}.
{escript_emu_args, "%%! -escript main ety_main -pz ety/ety/ebin\n"}.

{profiles,
  [{test, [
    {erl_opts, [{d, debug}, debug_info]},
    {deps, [{proper, "1.4.0"}, coveralls]},
    {extra_src_dirs, [{"test", [{recursive, true}]}]}
  ]},
  {default, [
    {erl_opts, [{d, debug}, debug_info]}
  ]},
  {prod, [
    {erl_opts, [no_debug_info]}
  ]}
]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{coveralls_coverdata, "_build/test/cover/*.coverdata"}.
{coveralls_service_name, "github"}.
